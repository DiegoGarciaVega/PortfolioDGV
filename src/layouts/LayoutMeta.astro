---
import "@fontsource-variable/onest"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/portfolio.svg`}  />
    <title>{title}</title>
  </head>
  <body class="relative text-black dark:text-white bg-gray-50 dark:bg-gray-950">
    <div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full 
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))] 
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
    </div>
    
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>